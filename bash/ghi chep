# Define variable, note: mustn't space around =
name="Alice"

# Print string, value of variable to screen
echo "Hello, $name!"
echo "Today is $(date)"

# Read data from keyboard, save to variable
read -p "Please input your name: " name
read -a names

# Calculating
$((1+2))

